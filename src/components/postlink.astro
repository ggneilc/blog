---
const { title, postname } = Astro.props;
---
<style>
#post {
  margin: 5px;
  width: clamp(500px,50%,1000px);
  flex: 1;
  background-color: #111;
  border: 1px solid #d9dcdc;
}

#post:hover {
  animation: 2s ease-in 1s normal;
  background-color: #d9dcdc;
  border: 1px solid #000;
  color: #111;
  box-shadow: -2px 2px 5px white;
  text-decoration: underline solid black 1px;
}

h1 {
  font-size: 28px;
  text-align: left;
  padding-left: 20px;
  text-decoration: underline solid white 1px;
}
</style>

<section id="post">
  <h1>{title}</h1>
  <p> pinned post </p>
  <a href={`/posts/${postname}`}>Read</a>
</section>
